<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
	   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd 
	   http://www.liquibase.org/xml/ns/dbchangelog 
	   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

	<!-- 1 -->
    <changeSet author="ashim" id="tbl_product">
        <createTable tableName="product">
            <column autoIncrement="true" name="id" type="INT">
                <constraints primaryKey="true" primaryKeyName="productPK"/>
            </column>
            <column name="description" type="VARCHAR(200)"/>
            <column name="product_code" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="product_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <rollback>
        	<dropTable tableName="product" />
        </rollback>
    </changeSet>

    <changeSet author="ashim" id="tbl_verification_token">
        <createTable tableName="verification_token">
            <column autoIncrement="true" name="id" type="INT">
                <constraints primaryKey="true" primaryKeyName="PK_VERIFICATION_TOKEN"/>
            </column>
            <column name="expiryDate" type="datetime"/>
            <column name="token" type="VARCHAR(255)"/>
            <column name="user_id" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <rollback>
        	<dropTable tableName="verification_token"/>
        </rollback>
    </changeSet>
    
    <changeSet author="ashim" id="app_user_column_enabled">
        <addColumn tableName="app_user">
            <column name="enabled" type="boolean"/>
        </addColumn>
        
        <rollback>
        	<dropColumn tableName="app_user" columnName="enabled" />
        </rollback>
    </changeSet>
    
    <changeSet author="ashim" id="verification_token_column_is_used">
        <addColumn tableName="verification_token">
            <column name="isUsed" type="boolean"/>
        </addColumn>
        
        <rollback>
        	<dropColumn tableName="verification_token" columnName="isUsed" />
        </rollback>
    </changeSet>
    
    <changeSet author="ashim" id="tbl_password_reset_token">
        <createTable tableName="password_reset_token">
            <column autoIncrement="true" name="id" type="INT">
                <constraints primaryKey="true" primaryKeyName="PK_PASSWORD_RESET_TOKEN"/>
            </column>
            <column name="expiryDate" type="datetime"/>
            <column name="token" type="VARCHAR(255)"/>
            <column name="user_id" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <rollback>
        	<dropTable tableName="password_reset_token" />
        </rollback>
    </changeSet>
    
    <!-- 2 -->
    
</databaseChangeLog>